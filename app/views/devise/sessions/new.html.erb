<div class="ui middle aligned center aligned grid auth">
  <div class="column">
    <h2 class="ui header teal">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "ui form"}) do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Eメールを入力" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワードを入力" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="ui checkbox field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "fluid ui button" %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
